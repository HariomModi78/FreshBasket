<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hariom Milk</title>
    <link rel="stylesheet" href="/stylesheets/productView.css">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"
/>
</head> 
<style>
    /* Fullscreen Loader */
    #loader {
        position: fixed;
        width: 100%;
        height: 100%;
        background: white;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    /* Loader Animation */
    .spinner {
        width: 50px;
        height: 50px;
        border: 5px solid #ddd;
        border-top: 5px solid blue;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
<body> 
    <main>
        <!-- Loader -->
    <div id="loader">
        <div class="spinner"></div>
    </div>
        <div class="header">
            
            
            
        </div>
        <div class="image">
            <img src="<%=product.imagePath%>" alt="">
        </div>
        <div class="imageBottom">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>
        <div class="detail">
            <div class="name1"><%=product.name%></div>
            <div class="quantity1"><%=product.quantity%></div>
            <div class="price1">₹<%=product.price%>/-</div>
        </div>
        <div class="discriptionButton">Discription<i class="ri-arrow-right-s-line" id="arrow"></i></div>
        <div class="discription">
            <p><%=product.discription%></p>
        </div>
        <p class="relatedItem">Related items</p>
        <div class="bar">
           <% products.forEach(function(val){%>
            <%if(val.categary==product.categary){%>
                <div class="item" id="<%=val._id%>">
                    <div class="itemImage">
                        <img src="<%=val.imagePath%>" alt="">
                    </div>
                    <div class="name"><%=val.name%></div>
                    <div class="off"><%=val.quantity%></div>
                    <div class="price">₹<%=val.price%>/-</div>
                </div>
            <%}%>
                
            <%})%>
            
        </div>
        <div class="fakeFooter"></div>
        <div class="fakeFooter"></div>
        
        <div class="button">
            <div class="buy" id="<%=product._id%>">Buy</div>
            <div class="footerBox center cart">
                <img src="/images/cart.gif" alt="">
                <p>Cart</p>
            </div>
            <div class="addToCart" id="<%=product._id%>">Add To Cart</div>
        </div>
    </main>
    <script src="/javaScripts/productView.js"></script>
    <script src="/javaScripts/loader.js"></script>
</body>
</html>