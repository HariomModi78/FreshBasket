        <%if(user.refer == true){%>
        <h2>Refer Box</h2>
        <form action="/referConfirm" method="post">
            <input class="referBox" name="referCode" type="text" placeholder="case sensitive ðŸš¨">
            <input type="submit" value="Submit">
