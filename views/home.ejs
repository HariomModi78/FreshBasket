<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
    <style>
        /* Fullscreen Loader */
        #loader {
            position: fixed;
            width: 100%;
            height: 100%;
            background: white;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        /* Loader Animation */
        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #ddd;
            border-top: 5px solid blue;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <main>
        <div class="header">
            <div class="input" id="<%=user.email%>">
                <img src="/images/search.png" alt="">
            </div>
            <img src="/images/sync.png" alt="">
        </div>

        <!-- Loader -->
    <div id="loader">
        <div class="spinner"></div>
    </div>

   

        <div class="notice">
            <!-- <h1>Leadboard</h1>
            <div class="winner">
                <div class="position">1</div>
                <h3>Hariom Modi</h3>
            </div>
            <div class="winner">
                <div class="position">2</div>
                <h3>Hariom Modi</h3>

            </div>
            <div class="winner">
                <div class="position">3</div>
                <h3>Hariom Modi</h3>

            </div> -->
        </div>
        <h1>Top Selling items</h1>
       
        <div class="topItem bar">
            <%product.forEach(function(val){%>
                <% if(val.categary=="Grocery"){%>
                    <div class="barItem item" id="<%=val._id%>">
                        <div class="image image1">
                            <img src="<%=val.imagePath%>" alt="Image">
                        </div>
                        <div class="itemName"><%=val.name%></div>
                        <div class="off"><%=val.quantity%></div>

                        <div class="price">
                         
                            <div class="realPrice">₹<%=val.price%>/-</div>
                        </div>
                        
                       
                        <div class="addToCart">View</div>
                </div>
            <%}%>
            <%})%>
        </div>
        <p class="text">Categary</p>
        <div class="categary">
            <%categary.forEach(function(val){%>
                <div class="categaryBox" id="<%=val.name%>">
                    <img src="<%=val.imagePath%>" alt="" id="<%=val.name%>">
                    <p id="<%=val.name%>"><%=val.name%></p>
                </div>
            <%})%>
            
        </div>
        <h1>Milk Products</h1> 
        <div class="milkItem bar">
            <%product.forEach(function(val){%>
               <% if(val.categary=="Dairy"){%>
                    <div class="barItem item" id="<%=val._id%>">
                        <div class="image image1">
                            <img src="<%=val.imagePath%>" alt="Image">
                        </div>
                        <div class="itemName"><%=val.name%></div>
                        <div class="off"><%=val.quantity%></div>
                        <div class="price">
                         
                            <div class="realPrice">₹<%=val.price%>/-</div>
                        </div>
                        
                       
                        <div class="addToCart">View</div>
                </div>
                <%}%>
            <%})%>
            
        </div> 

        
        
        <div class="fakeFooter"></div>
        <div class="footer">
            <div class="footerBox home">
                <img src="/images/home.png" alt="">
                <p>Home</p>
            </div>
            <div class="footerBox seller">
                <img src="/images/homeOrder.png" alt="">
                <p>Order</p>
            </div>
            <div class="footerBox center cart">
                <img src="/images/cart.gif" alt="">
                <p>Cart</p>

            </div>
            <div class="footerBox feed">
                <img src="/images/homeWallet.png" alt="">
                <p>Wallet</p>
            </div>
            <div class="footerBox more">
                <img src="/images/more.png" alt="">
                <p>More</p>
            </div>
        </div>
        <%if(user.username=="Hariom Milk User"){%>
            <div class="detail">
                <form action="/detail" method="post">
                    <input type="text" name="username" placeholder="Username" required>
                    <input type="tel" name="mobileNumber" id="" placeholder="Mobile number" required>
                    <input type="submit" value="Submit">
                </form>
            </div> 
        <%}%>
        
    </main>
    <script src="/javaScripts/nav.js"></script>
    <script src="/javaScripts/home.js"></script>
    <script src="/javaScripts/loader.js"></script>
</body>
</html>